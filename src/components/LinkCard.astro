---
import { Icon } from '@astrojs/starlight/components';
import type { HTMLAttributes } from 'astro/types';

interface Props extends Omit<HTMLAttributes<'a'>, 'title'> {
	title: string;
	description?: string;
    arrow?: string;
}

const { title, description, arrow, ...attributes } = Astro.props;
---

<div class="sl-link-card">
    {arrow && arrow === "left" && <Icon name="left-arrow" size="1.333em" class="icon rtl:flip" />}
	<span class="sl-flex stack">
		<a {...attributes}>
			<span class="title" set:html={title} />
		</a>
		{description && <span class="description" set:html={description} />}
	</span>
    {arrow && arrow === "right" && <Icon name="right-arrow" size="1.333em" class="icon rtl:flip" />}
</div>

<style>
	:root {
		.sl-link-card {
			display: grid;
			grid-template-columns: 1fr auto;
			gap: 0.5rem;
			border: 1px solid var(--sl-color-gray-5);
			border-radius: 0.5rem;
			padding: 1rem;
			position: relative;
		}

		a {
			text-decoration: none;
			line-height: var(--sl-line-height-headings);
		}

		/* a11y fix for https://github.com/withastro/starlight/issues/487 */
		a::before {
			content: '';
			position: absolute;
			inset: 0;
			pointer-events: none; /* prevent pseudo overlay from trapping hover state */
		}

		.stack {
			flex-direction: column;
			gap: 0.5rem;
		}

		.title {
			color: var(--sl-color-white);
			font-weight: 600;
			font-size: var(--sl-text-lg);
		}

		.description {
			color: var(--sl-color-gray-3);
			line-height: 1.5;
		}

		.icon {
			color: var(--sl-color-gray-3);
		}

		/* Hover state (applies when pointer over card) */
		.sl-link-card:hover {
			background: var(--sl-color-gray-7, var(--sl-color-gray-6));
			border-color: var(--sl-color-gray-2);
		}

		.sl-link-card:hover .icon {
			color: var(--sl-color-white);
		}

		/* Remove hover styling when focus persists after pointer leaves (explicitly scope focus) */
		.sl-link-card:focus-within:not(:hover) {
			background: var(--sl-color-gray-700); /* revert */
			border-color: var(--sl-color-gray-5);
		}
	}
</style>