---
import { ScrollArea } from './ui/scroll-area';
import type { StarlightIcon } from 'node_modules/@astrojs/starlight/components/Icons';
import PreviewCardMenu from './PreviewCardMenu.astro';
import { Markdown } from '@astropub/md'
import { Button } from './ui/button';

interface Props {
	icon?: StarlightIcon;
	title: string;
    overflow?: string;
	link?: string;
	md: string;
}

const { title, overflow, link, md} = Astro.props;
---

<article class="previewCard card sl-flex rounded-md p-5 text-[14px]">
	<div class="title sl-flex text-2xl">
		<span set:html={title} />
		<PreviewCardMenu link={link??'/'}></PreviewCardMenu>
	</div>
    { overflow && overflow === "scroll" ?
        <ScrollArea className="pagePreview p-0.5 max-h-50 w-auto">
       		 <Markdown of={md} />
	 		<slot />
        </ScrollArea>
	:
		<div class="body"><slot /></div>
	}
	{ link && (<a href={link??'/'}><Button variant="default" size="icon" aria-label="See More" className="bottomDots">...</Button></a>)}
</article>

<style>
	@layer starlight.components {
		.previewCard {
			border: 2px solid var(--sl-color-gray-5);
			background-color: var(--sl-color-gray-700);
			flex-direction: column;
			padding: clamp(1rem, calc(0.125rem + 2vw), 2.5rem);
			gap: clamp(0.5rem, calc(0.125rem + 1vw), 1rem);
		}
		.previewCard .title {
			font-weight: 600;
			color: ;
			line-height: var(--sl-line-height-headings);
			gap: 1rem;
			align-items: center;
		}
		.card .icon {
			border: 1px solid var(--sl-card-border);
			background-color: var(--sl-card-bg);
			padding: 0.2em;
			border-radius: 0.25rem;
			flex-shrink: 0;
		}
		.card .body {
			margin: 0;
			font-size: clamp(var(--sl-text-sm), calc(0.5rem + 1vw), var(--sl-text-body));
		}

		.previewCard .bottomDots {
			margin: 0;
			padding: 0.1em;
            width: 100%;
			text-decoration: none;

		}
	}
</style>